        <script>
            $(document).ready(function() {
                $("#medYes").hide();
                $("input[type='radio']").click(function() {
                    $("#medYes").hide();
                    var radioValue = $("input[name='status']:checked").val();
                    if (radioValue == 'yes')
                        $("#medYes").show();


                });
            });
            $(document).ready(function() {
                $("#virYes").hide();
                $("input[type='radio']").click(function() {
                    $("#virYes").hide();
                    var radioValue = $("input[name='status2']:checked").val();
